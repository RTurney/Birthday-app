<h1>Hello There!</h1>

<form action="/birthday" method="post">
  <label for="name">
    What's your name?
  </label>
  <input type="text" name="name">
  <br/> <br/>
  <label for="day">
    Day
  </label>
  <input type="number" name="day">
  <label for="month">
    Month
  </label>
  <input type="month" name="month" min="1900-01" max="2020-12-31">
  <br>
  <button type="submit" value="Submit">
    Go!
  </button>
</form>
